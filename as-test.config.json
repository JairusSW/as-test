{
  "input": ["./assembly/__tests__/*.spec.ts"],
  "outDir": "./build",
  "config": "./asconfig.json",
  "plugins": {
    "coverage": true
  },
  "buildOptions": {
    "args": ["--transform json-as/transform"],
    "target": "wasi"
  },
  "runOptions": {
    "runtime": {
      "name": "wasmtime",
      "run": "wasmtime <file>"
    }
  }
}
